<header id="header">
    <div class="logo">
        <span class="icon fa-gem"></span>
    </div>
    <div class="content">
        <div class="inner">
            <section id="intro" style="padding: 5rem;">
            <h2 class="major">Fornecedores</h2>

            <a href="<%= fornecedores_novo_path %>">Novo Fornecedor</a><br>
            
            <table>
              <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Razão social</th>
                    <th>CNPJ</th>
                    <th>Endereço</th>
                    <th></th>
                </tr>
              </thead>
              <tbody>
                <% @fornecedores.each do |fornecedor| %>
                  <tr>
                    <td><%= fornecedor.id %></td>
                    <td><%= fornecedor.nome %></td>
                    <td><%= fornecedor.razao_social %></td>
                    <td><%= fornecedor.cnpj %></td>
                    <td><%= fornecedor.endereco %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= link_to "Ir para a página inicial", root_path %>
          </section>
        </div>
    </div>
</header>